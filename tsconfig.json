{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react",
    "paths": {
      "@icons/*": ["assets/icons/*"],
      "@app/*": ["src/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src"]
}
